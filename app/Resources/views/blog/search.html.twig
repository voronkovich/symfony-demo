{% extends 'base.html.twig' %}

{% block body_id 'blog_search' %}

{% block main %}

    <section class="search-form">
        <form action="{{ path('blog_search') }}" method="get">
            <div class="input-group">
                <input name="q" value="{{ terms|join(' ') }}" type="text" class="form-control" placeholder="{{ 'post.search_for'|trans }}" autocomplete="off">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </form>
    </section>

    <section class="search-results">
        {% for post in posts %}
            <article class="post">
                <h2>
                    <a href="{{ path('blog_post', { slug: post.slug }) }}">
                        {{ post.title|e|emphasize_terms(terms, emphasize_config)|raw }}
                    </a>
                </h2>

                {{ post.summary|md2html }}
            </article>
        {% else %}
            {% if terms is not empty %}
                <div class="well">{{ 'post.no_posts_found'|trans }}</div>
            {% endif %}
        {% endfor %}
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(function() {
            $('.search-form input[name="q"]').instantSearch();
        });
    </script>
{% endblock javascripts %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
